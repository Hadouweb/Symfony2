{# src/Kita/BlogBundle/Resources/views/Kita/voir.html.twig #}

{% extends "KitaBlogBundle::layout.html.twig" %}

{% block title %}
    Modifier un article - {{ parent() }}
{% endblock %}
    
{% block kitablog_body %}
    
    <h2>Modifier un article</h2>
    
    {% include "KitaBlogBundle:Kita:formulaire.html.twig" %}
    
    <p>
        Vous éditez un article déjà existant,
        ne le changez pas trop pour éviter
        aux membres de ne pas comprendre
        ce qu'il se passe.
    </p>
    
    <p>
        <a href="{{ path('kitablog_voir', {'slug': article.slug}) }}" class="btn">
            <i class="icon-chevron-left"></i>
            Retour à l'archive
        </a>
    </p>
    
{% endblock %}