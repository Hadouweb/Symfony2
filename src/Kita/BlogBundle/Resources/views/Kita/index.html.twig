{# src/Kita/BlogBundle/Resources/views/Blog/index.html.twig #}

{% extends "KitaBlogBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }} 
{% endblock %}

{% block kitablog_body %}
    
    <h2>Liste des articles</h2>
    
    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('kitablog_voir', {'id': article.id}) }}">
                    {{ article.titre }}
                </a>
            </li>
        {% else %}
            <li>Pas (encore !) d'articles</li>
        {% endfor %}
    </ul>
    
{% endblock %}