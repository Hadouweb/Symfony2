{# src/Kita/BlogBundle/Resources/views/Blog/index.html.twig #}

{% extends "KitaBlogBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }} 
{% endblock %}

{% block kitablog_body %}
    
    <h2>Liste des articles</h2>
    
    <ul>
        {% for article in articles %}
            {% include "KitaBlogBundle:Kita:article.html.twig" with {'accueil': true} %}
            <hr />
        {% else %}
            <p>Par 'encore !) d'articles</p>
        {% endfor %}
    </ul>
    
    <div class="pagination">
        <ul>
          {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
          {% for p in range(1, nombrePage) %}
            <li{% if p == page %} class="active"{% endif %}>
              <a href="{{ path('kitablog_accueil', {'page': p}) }}">{{ p }}</a>
            </li>
          {% endfor %}
        </ul>
    </div>
    
{% endblock %}